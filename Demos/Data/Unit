---html
<div id="cpick">
  Click here for a unit picker!
</div>
---css
#cpick{
  width: 500px;
  height: 50px;
  line-height: 50px;
  border: 1px dashed #aaa;
  text-align: center;
  font-size: 14px;
  color: #333;
  cursor: pointer;
}
---js
window.addEvent('domready', function(){
  unit = new Data.Unit();
  $(unit).inject($("cpick"),'before')
  unit.addEvent('change', function(e){
    console.log(e);
    $("cpick").setStyle('border-width', e)
  });
});

