!!! xml utf-8
!!! strict
%html{:lang=>"en",:"xml:lang"=>"en", :xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %link{:href => "../Themes/Blank/reset.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %script{:src=>"../mootools/mootools-core-1.3.1-full-compat-yc.js", :type=>"text/javascript"}
    %script{:src=>"../mootools/mootools-more-1.3.1.1.js", :type=>"text/javascript"}
    - if request.path_info =~ /^\/build/
      %script{:src=>"/Packager.js", :type=>"text/javascript"}
    - if request.path_info =~ /^\/demos/ or request.path_info =~ /^\/themes/ or request.path_info =~ /^\/docs/
      %script{:src=>"../Themes/Chrome/theme.js", :type=>"text/javascript"}
      %link{:href => "../Themes/Blender/theme.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
      %script{:src=>"../builds/blender-gle-latest.js", :type=>"text/javascript"}
    %link{:href => "blender.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %title
      - if request.path_info =~ /^\/home/
        - title = "G.UI"
      - else
        - title = "G.UI"+request.path_info.split("/").join(" :: ")
      = title
  %body
    .header
      .nav
        %ul.main
          %li.first
            Lattice
          - if request.path_info =~ /^\/home/
            %a.current{:href=>"/home"}
              %li.first
                Home
          - else
            %a{:href=>"/home"}
              %li.first
                Home
          - if request.path_info =~ /^\/docs/
            %a.current{:href=>"/docs"}
              %li.first
                Docs
          - else
            %a{:href=>"/docs"}
              %li.first
                Docs
          - if request.path_info =~ /^\/demos/
            %a.current{:href=>"/demos"}
              %li.first
                Demos
          - else
            %a{:href=>"/demos"}
              %li.first
                Demos
          %a{:href=>"/themes"}
            %li.first
              Themes
          - if request.path_info =~ /^\/build/
            %a.current{:href=>"/build"}
              %li.first
                Download
          - else
            %a{:href=>"/build"}
              %li.first
                Download
      .clear
    = yield
    
